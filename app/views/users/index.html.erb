<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <table class="table table-hover">
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <% if admin%>
            <td>
              <%if user.denied%>
                  <span class="label label-info">Frozen</span>
              <% end %>
            </td>
        <% end %>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </table>
</table>

<br>

<%= link_to 'New User', new_user_path, class:"btn btn-primary" %>